@model BeatBay.DTOs.CreateUserDto
@{
    ViewData["Title"] = "Join as Artist - BeatBay";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-900 via-purple-900 to-indigo-900 py-12">
    <div class="max-w-md w-full space-y-8 p-8 bg-white bg-opacity-10 backdrop-blur-lg rounded-xl shadow-2xl">
        <div class="text-center">
            <div class="mx-auto w-16 h-16 bg-gradient-to-r from-pink-500 to-purple-500 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v6.114a4 4 0 10.2 7.166 1 1 0 00-.2-.28V18a1 1 0 002 0V7.82l8-1.6v5.894a4 4 0 10.2 7.166 1 1 0 00-.2-.28V3z" />
                </svg>
            </div>
            <h2 class="text-4xl font-bold text-white mb-2">Become an Artist</h2>
            <p class="text-gray-300">Share your music with the world on BeatBay</p>
        </div>

        <form asp-action="RegisterArtist" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-300 mb-2">Artist Username *</label>
                    <input asp-for="UserName"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition duration-200"
                           placeholder="Your unique artist name">
                    <span asp-validation-for="UserName" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-2">Email *</label>
                    <input asp-for="Email" type="email"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition duration-200"
                           placeholder="artist@email.com">
                    <span asp-validation-for="Email" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300 mb-2">Password *</label>
                    <input asp-for="Password" type="password"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition duration-200"
                           placeholder="Secure password (min 6 chars)">
                    <span asp-validation-for="Password" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-300 mb-2">Stage/Real Name</label>
                    <input asp-for="Name"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition duration-200"
                           placeholder="Your stage or real name">
                    <span asp-validation-for="Name" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-300 mb-2">Artist Bio</label>
                    <textarea asp-for="Bio" rows="4"
                              class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition duration-200 resize-none"
                              placeholder="Tell your fans about your musical journey, style, and inspiration..."></textarea>
                    <span asp-validation-for="Bio" class="text-red-400 text-sm"></span>
                </div>
            </div>

            <div class="bg-purple-500 bg-opacity-20 border border-purple-400 rounded-lg p-4">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-purple-300 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                    </svg>
                    <div class="text-sm text-purple-100">
                        <p class="font-semibold mb-1">Artist Benefits:</p>
                        <ul class="list-disc list-inside space-y-1 text-xs">
                            <li>Upload and share your original music</li>
                            <li>Track your song performance and analytics</li>
                            <li>Build your fan base and connect with listeners</li>
                            <li>Access artist-exclusive features</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="w-full bg-gradient-to-r from-pink-600 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-pink-700 hover:to-purple-700 transform hover:scale-105 transition duration-200 shadow-lg">
                    Join as Artist
                </button>
            </div>

            <div class="text-xs text-gray-400 text-center">
                By joining as an artist, you agree to our Artist Terms and Community Guidelines.
            </div>
        </form>

        <div class="text-center pt-6 border-t border-gray-600">
            <p class="text-gray-300 text-sm mb-2">Already have an account?</p>
            <div class="space-x-4">
                <a asp-action="Login"
                   class="text-pink-300 hover:text-pink-100 font-semibold transition duration-200">
                    Sign In
                </a>
                <span class="text-gray-500">|</span>
                <a asp-action="Register"
                   class="text-purple-300 hover:text-purple-100 font-semibold transition duration-200">
                    Regular Account
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}