@model BeatBay.DTOs.CreateUserDto
@{
    ViewData["Title"] = "Register - BeatBay";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-900 via-teal-900 to-blue-900 py-12">
    <div class="max-w-md w-full space-y-8 p-8 bg-white bg-opacity-10 backdrop-blur-lg rounded-xl shadow-2xl">
        <div class="text-center">
            <h2 class="text-4xl font-bold text-white mb-2">Join BeatBay</h2>
            <p class="text-gray-300">Create your account and start your musical journey</p>
        </div>

        <form asp-action="Register" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-300 mb-2">Username *</label>
                    <input asp-for="UserName"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200"
                           placeholder="Choose a unique username">
                    <span asp-validation-for="UserName" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-2">Email *</label>
                    <input asp-for="Email" type="email"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200"
                           placeholder="your@email.com">
                    <span asp-validation-for="Email" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300 mb-2">Password *</label>
                    <input asp-for="Password" type="password"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200"
                           placeholder="Minimum 6 characters">
                    <span asp-validation-for="Password" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-300 mb-2">Full Name</label>
                    <input asp-for="Name"
                           class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200"
                           placeholder="Your full name">
                    <span asp-validation-for="Name" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-300 mb-2">Bio</label>
                    <textarea asp-for="Bio" rows="3"
                              class="w-full px-4 py-3 bg-white bg-opacity-20 border border-gray-500 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200 resize-none"
                              placeholder="Tell us about yourself..."></textarea>
                    <span asp-validation-for="Bio" class="text-red-400 text-sm"></span>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="w-full bg-gradient-to-r from-teal-600 to-green-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-teal-700 hover:to-green-700 transform hover:scale-105 transition duration-200 shadow-lg">
                    Create Account
                </button>
            </div>

            <div class="text-xs text-gray-400 text-center">
                By creating an account, you agree to our Terms of Service and Privacy Policy.
            </div>
        </form>

        <div class="text-center pt-6 border-t border-gray-600">
            <p class="text-gray-300 text-sm mb-2">Already have an account?</p>
            <a asp-action="Login"
               class="text-teal-300 hover:text-teal-100 font-semibold transition duration-200">
                Sign In
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}