@model List<BeatBay.API.DTOs.UserDto>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(user.UserName ?? "N/A")</td>
                    <td>@(user.Email ?? "N/A")</td>
                    <td>@(user.IsActive ? "Activo" : "Inactivo")</td>
                    <td>
                        <a href="@Url.Action("Details", "Users", new { id = user.Id })">Ver</a> |
                        <a href="@Url.Action("Edit", "Users", new { id = user.Id })">Editar</a> |
                        <a href="@Url.Action("Delete", "Users", new { id = user.Id })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>No hay usuarios registrados o no se pudieron cargar los datos.</p>
    </div>
}

<hr />
